@model LacDau.Models.SubCategoryVM.SubCategoryVM;

<form id="AppVueSubCategoryData">
    <input hidden asp-for="Id" />
   
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" onkeyup="generateSlug(event)" v-model="nameSub" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Slug" class="control-label"></label>
        <input asp-for="Slug" class="form-control" v-model="slugSub" />
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>

</form>

<script>
    var AppVueSubCategoryData = new Vue({
        el: "#AppVueSubCategoryData",
        data: {
            nameSub: "",
            slugSub: "",
        },
    })
</script>