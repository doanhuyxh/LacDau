                $("#ModalAddContent").load(`/Admin/Category/AddSUbCate`, function () {
                    $("#ModalAddEditSub").modal("show");
                    $("#ModalAddTitle").html("Thêm danh mục mới")
                })
            },
            generateSlug(e) {
                let text = event.target.value;
                if (text != null) {
                    let str = text.normalize('NFD').replace(/[\u0300-\u036f]/g, '');

