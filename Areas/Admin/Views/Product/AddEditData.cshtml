@model LacDau.Models.ProductVM.ProductVM;
<form>
    <input hidden asp-for="Id" />
    <input hidden asp-for="CreatedDate" />
    <input hidden asp-for="Img1" />
    <input hidden asp-for="Img2" />
    <input hidden asp-for="Video" />


    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" onkeyup="slugify(event.target.value)" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Slug" class="control-label"></label>
        <input asp-for="Slug" class="form-control" />
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" rows="5" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TrademarkId" class="form-label"></label>
        <div class="container">
            <select asp-for="TrademarkId" asp-items="@ViewBag.Brand" class="form-control">
                <option value="0" selected disabled>--- Không  ---</option>
            </select>
            <span asp-validation-for="TrademarkId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="form-label"></label>
        <div class="container">
            <select asp-for="CategoryId" asp-items="@ViewBag.Cate" class="form-control">
                <option value="0" selected disabled>--- Không  ---</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Img1File" class="control-label"></label>
        <input asp-for="Img1File" class="form-control" />
        <span asp-validation-for="Img1File" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Img2File" class="control-label"></label>
        <input asp-for="Img2File" class="form-control" />
        <span asp-validation-for="Img2File" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VideoFile" class="control-label"></label>
        <input asp-for="VideoFile" class="form-control" />
        <span asp-validation-for="VideoFile" class="text-danger"></span>
    </div>

</form>